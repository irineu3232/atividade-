@model atividade.Models.Usuario;
@{
    <link rel="stylesheet" href="~/css/CadastroUsuario.css" />
    ViewData["Title"] = "Cadastro";
}

<h2 class="titulo">Registro</h2>

<form asp-action="Cadastro" method="post">
   <div class="div">
        <label>Nome:</label>
        <input asp-for="Nome" required />
   </div>
    <div class="div">
        <label>Email:</label>
        <input asp-for="Email" type="email" required />
    </div>
    <div class="div">
        <label>Senha:</label>
        <input asp-for="Senha" type="password" required />
    </div>
    <div class="div">
        <button type="submit" class="btt">Novo Cadastrado</button>

    </div>

</form>