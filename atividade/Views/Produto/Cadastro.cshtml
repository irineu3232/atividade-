@model atividade.Models.Produto;
@{
   ViewData["Title"] = "Registrar um produto";
}

    <h2>Registre o produto</h2>

    <form asp-action="Cadastro" method="post">
        <div>
            <label>Nome</label>
            <input asp-for="Nome" type="text" required />
        </div>

        <div>
            <label>Descrição</label>
            <input asp-for="Descricao" type="text" required />
        </div>
        
        <div>
            <label>Preço</label>
            <input  asp-for="Preco" type="number" />
        </div>
        <div>
            <button type="submit">Cadastrar</button>
        </div>
    </form>